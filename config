ngx_addon_name=ngx_http_s3_gateway_c_module

if test -n "$ngx_module_link"; then
    ngx_module_type=HTTP
    ngx_module_name=ngx_http_s3_gateway_c_module
    ngx_module_srcs="$ngx_addon_dir/src/ngx_http_s3_gateway_c_module.c"
    ngx_module_libs="-L/opt/local/lib -lcurl -lcrypto -lssl"
    . auto/module
else
    HTTP_MODULES="$HTTP_MODULES ngx_http_s3_gateway_c_module"
    NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/src/ngx_http_s3_gateway_c_module.c"
    CORE_LIBS="$CORE_LIBS -L/opt/local/lib -lcurl -lcrypto -lssl"
fi
